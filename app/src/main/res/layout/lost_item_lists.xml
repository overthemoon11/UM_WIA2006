<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="0dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lostItemImageList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/locationShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Location: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/dateShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Date: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/timeShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Time: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/itemShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Lost items: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/pointShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Collect Point: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/extraShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Extra"
            android:textColor="#272464" />


    </LinearLayout>

</androidx.cardview.widget.CardView>