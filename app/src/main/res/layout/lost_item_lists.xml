<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lostItemImageList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/locationShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Location: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/dateShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Date: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/timeShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Time: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/itemShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Lost items: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/pointShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Collect Point: "
            android:textColor="#272464" />

        <TextView
            android:id="@+id/extraShow"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:text="Extra"
            android:textColor="#272464" />


    </LinearLayout>

</androidx.cardview.widget.CardView>